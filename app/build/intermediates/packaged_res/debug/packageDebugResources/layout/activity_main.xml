<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#9C9C9C"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout_top"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Toolbar
                    android:id="@+id/TopToolBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9C9C9C">

                    <ImageView
                        android:id="@+id/top_logo"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/group_25"
                        android:visibility="invisible" />
                </Toolbar>

            </com.google.android.material.appbar.AppBarLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottomBar"
            android:layout_below="@+id/topBar">

            <fragment
                android:id="@+id/welc_host"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:defaultNavHost="true"
                app:navGraph="@navigation/navicat" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <Toolbar
                    android:id="@+id/BottomToolBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9C9C9C"
                    app:layout_anchor="@+id/appBarLayout"
                    app:layout_anchorGravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <LinearLayout
                            android:id="@+id/Back_butt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:clickable="true"
                            android:weightSum="100"
                            tools:visibility="invisible">


                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:src="@drawable/baseline_arrow_back" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="70"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center_vertical"
                                android:text="Back"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="52" />

                        <LinearLayout
                            android:id="@+id/Next_butt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="25"
                            android:clickable="true"
                            android:weightSum="100"
                            tools:ignore="TouchTargetSizeCheck">

                            <TextView
                                android:id="@+id/next_label"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="70"
                                android:fontFamily="@font/inter_medium"
                                android:gravity="center_vertical"
                                android:text="Next"
                                android:textAlignment="textEnd"
                                android:textColor="#000000"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:ignore="RtlCompat" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:src="@drawable/baseline_arrow_forward" />

                        </LinearLayout>

                    </LinearLayout>
                </Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

        </RelativeLayout>


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>